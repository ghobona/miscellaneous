{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Collection Schema",
    "description": "This schema defines the metadata resource returned from /collections/{collectionId}.",
    "type": "object",
    "required": [
        "links",
        "instances"
        ],
    "properties": {
        "links": {
            "type": "array",
            "items": {"$href": "link.json"}
            },
        "instances": {
            "type": "array",
            "items": {"$href": "collectionInfo.json"}
            }
        }
    }
